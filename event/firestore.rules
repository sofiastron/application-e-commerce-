rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Lire tout
    match /{document=**} {
      allow read: if true;
    }

    // Écriture réservée aux utilisateurs connectés
    match /Events/{eventId} {
      allow write: if request.auth != null;
    }

    match /Votes/{voteId} {
      allow write: if request.auth != null;
    }
  }
}
